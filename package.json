{
  "name": "fable-workspace",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "cd apps/mobile && npm start",
    "mobile:ios": "cd apps/mobile && npm run ios",
    "mobile:android": "cd apps/mobile && npm run android",
    "mobile:web": "cd apps/mobile && npm run web",
    "mobile:lint": "cd apps/mobile && npm run lint",
    "mobile:typecheck": "cd apps/mobile && npm run typecheck",
    "mobile:test": "cd apps/mobile && npm run test",
    "preview": "bash scripts/build-vercel.sh && cd apps/mobile/dist && npx serve -s . -p 3000",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {
    "@isaacs/brace-expansion": "^5.0.0",
    "jest-validate": "^30.2.0",
    "minimatch": "^10.1.1",
    "typescript": "~5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
