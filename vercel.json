{
  "buildCommand": "bash scripts/build-vercel.sh",
  "outputDirectory": "apps/mobile/dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/app",
      "destination": "/app/index.html"
    },
    {
      "source": "/app/:path(.*)",
      "destination": "/app/index.html"
    }
  ],
  "headers": [
    {
      "source": "/app/_expo/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
